{
	"name": "pyformat",
	"displayName": "PyFormat",
	"description": "Providing code formatting and import organization using autopep8 and isort",
	"version": "1.0.0",
	"publisher": "giyyapan",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:python",
		"onCommand:pyformat.sortImports"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pyformat.sortImports",
				"title": "Sort Imports",
				"category": "PyFormat"
			}
		],
		"configuration": {
			"type": "object",
			"title": "PyFormat",
			"properties": {
				"pyformat.autopep8Args": {
					"type": "array",
					"description": "Arguments passed to autopep8. Each argument is a separate item in the array.",
					"default": [
						"--max-line-length 120"
					],
					"items": {
						"type": "string"
					},
					"scope": "resource"
				},
				"pyformat.isortArgs": {
					"type": "array",
					"description": "Arguments passed to isort. Each argument is a separate item in the array.",
					"default": [
						"-w 120",
						"-m 2"
					],
					"items": {
						"type": "string"
					},
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@types/diff-match-patch": "^1.0.32",
		"@types/tmp": "^0.1.0",
		"diff-match-patch": "^1.0.4",
		"tmp": "^0.1.0"
	}
}
